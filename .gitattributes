# Auto detect text files and perform LF normalization
* text=auto

# Source code
*.cpp text eol=lf
*.h text eol=lf
*.hpp text eol=lf
*.c text eol=lf
*.cc text eol=lf
*.cxx text eol=lf

# CMake
CMakeLists.txt text eol=lf
*.cmake text eol=lf

# Scripts
*.sh text eol=lf
*.bash text eol=lf

# Windows scripts
*.bat text eol=crlf
*.cmd text eol=crlf
*.ps1 text eol=crlf

# Documentation
*.md text eol=lf
*.txt text eol=lf

# Configuration
*.yaml text eol=lf
*.yml text eol=lf
*.json text eol=lf
*.xml text eol=lf
*.ini text eol=lf
*.conf text eol=lf
*.config text eol=lf

# Lua scripts
*.lua text eol=lf

# Assets
*.png binary
*.jpg binary
